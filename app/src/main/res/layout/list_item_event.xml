<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="5dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_event_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@android:color/darker_gray" />
        <TextView
            android:layout_margin="15dp"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/tv_event_name"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="LOKET Roadshow 2019 - Malang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:background="@drawable/box"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/tv_event_date"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />

            <TextView
                android:id="@+id/tv_event_price"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@+id/tv_event_date"
                android:text="Free"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_event_place"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/tv_event_price"
                android:layout_alignStart="@id/tv_event_price"
                android:textSize="16dp"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginTop="10dp"
                android:text="Ciputra Artpreneur, DKI Jakarta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_event_start_time"
                android:layout_below="@+id/tv_event_place"
                android:layout_alignStart="@id/tv_event_price"
                android:text="18:30 - 20:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>